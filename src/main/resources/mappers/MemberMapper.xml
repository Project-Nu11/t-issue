<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toiletissue.member.model.dao.MemberMapper">

    <!-- 회원가입 -->
    <insert id="insert" parameterType="com.toiletissue.member.model.dto.MemberSignupDTO">
        INSERT INTO member (
        member_id,
        member_pwd,
        member_name,
        email,
        member_bdate,
        member_gender,
        end_status
        ) VALUES (
        #{memberId},
        #{memberPwd},
        #{memberName},
        #{email},
        #{memberBdate},
        #{memberGender},
        TRUE <!-- 회원가입 시 계정 활성화 -->
        )
    </insert>

    <!-- 로그인 -->
    <resultMap id="login" type="com.toiletissue.member.model.dto.MemberLoginDTO">
        <result property="memberId"  column="member_id"/>
        <result property="memberPwd" column="member_pwd"/>
        <result property="endStatus" column="end_status"/>
    </resultMap>

    <select id="findByMemberId" parameterType="string" resultMap="login">
        SELECT
        member_id,
        member_pwd,
        end_status
        FROM member
        WHERE member_id = #{memberId}
    </select>

    <!-- 아이디 중복 -->
    <select id="exists" parameterType="string" resultType="int">
        SELECT
        COUNT(*)
        FROM member
        WHERE member_id = #{memberId}
    </select>

</mapper>

