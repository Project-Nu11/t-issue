<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toiletissue.notice.model.dao.NoticeMapper">
    <resultMap id="noticeResultMap" type="com.toiletissue.notice.model.dto.NoticeDTO">
        <id property="no" column="notice_no"/>
        <result property="title" column="notice_title"/>
        <result property="content" column="notice_content"/>
        <result property="date" column="notice_date"/>
    </resultMap>

    <insert id="insertNotice">
        insert into notice
        (
        notice_no,
        notice_title,
        notice_content,
        notice_date
        )
        values
        (
        null,
        #{title},
        #{content},
        date_format(now(),'%y.%m.%d')
        )
    </insert>

    <delete id="deleteNotice">
        delete from notice where notice_no = #{no}
    </delete>

    <select id="selectAllNotice" resultMap="noticeResultMap">
        select
        notice_no,
        notice_title,
        notice_content,
        notice_date
        from notice;
    </select>
</mapper>